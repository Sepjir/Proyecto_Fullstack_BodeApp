<div class="container text-center mt-3">
    <h1>Entregar insumos a Departamentos</h1>
</div>
<hr class="w-50 container" />

<form class="container mt-4 w-55 mb-3 align-items-center" action="/entregar_insumos?token={{token}}" method="post">
    <div class="row">
        <div class="col-10">
        <label class="form-label">Busca un insumo:</label>
        <input class="form-control" list="datalistOptions" name="insumo">
            <datalist id="datalistOptions">
            {{#each insumos}}
            <option value="{{this.nombre_de_insumo}}"></option>
            {{/each}}
            </datalist>
        </div>
    </div>
    <div class="row">
        <div class="mt-3 col-4">
            <label class="form-label">Cantidad:</label>
            <input name="cantidad" type="number" min="0" class="form-control" required/>
        </div>
    </div>
    <div class="row">
        <div class="mt-3 col-8">
        <label class="form-label">Area que recibe:</label>
        <select class="form-select" aria-label="Default select example" name="area">
            <option selected>Selecciona un departamento</option>
            {{#each areas}}
            <option value="{{this.id_area}}">{{this.nombre_area}}</option>
            {{/each}}
            </select>
        </div>
    </div>
    <div class="row">
        <div class="mt-3 col-8">
            <label class="form-label">¿Quién retira?:</label>
            <input name="nombre" type="text" class="form-control" required/>
        </div>
    </div>
    <div class="mt-3">
        <label class="form-label">Fecha de Salida:</label>
        <input name="fecha" id="fecha" type="date" value="2022-05-06" required/>
    </div>
  <button class="btn btn-primary mt-3 mb-5">Entregar</button>
    <a href="/bodeguero?token={{token}}"><button type="button" class="btn btn-primary mt-3 mb-5" >Volver</button></a>
</form>
<script>
    const fecha = new Date().toISOString().slice(0,10)
    const input = document.getElementById("fecha")
    const dateFunction = () => {
        input.setAttribute("value", `${fecha}`)
    }
    dateFunction()
</script>