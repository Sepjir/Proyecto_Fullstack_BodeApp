    <div class="py-4 text-center">
      <h1>Registro</h1>
      <hr class="w-50 container" />

      <form action="/adduser" method="post" >
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input class="form-control m-auto" name="email" required />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input class="form-control m-auto" name="name" required/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Apellido</label>
            <input class="form-control m-auto" name="lastname" required/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Contraseña</label>
            <input class="form-control m-auto" type="password" name="password" required />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la contraseña</label>
            <input class="form-control m-auto" type="password" name="password2" required />
          </div>
        </div>
        <button class="btn btn-primary m-2">Registrarme</button>
      </form>
        <a href="/login"><button class="btn btn-success m-auto">Iniciar Sesión</button></a>
        <a href="/"><button class="btn btn-secondary m-auto">Volver al inicio</button></a>
    </div>