<div class="container text-center mt-2">
    <h1>Agregar nuevos insumos</h1>
        <hr class="w-50 container" />
</div>
<div class="container">
    <form action="/add_item" method="post">
        <div class="row">
        <div class="mt-3 col-8">
            <label class="form-label">Agregar nuevo insumo:</label>
            <input name="item" type="text" class="form-control" required/>
            <select class="form-select mt-2" aria-label="Default select example" name="type" required>
                <option selected>Selecciona un tipo de insumo</option>
                {{#each tipoInsumo}}
                <option value="{{this.id_tipo_insumo}}">{{this.tipo_de_insumo}}</option>
                {{/each}}
            </select>
        </div>
    </div>
        <button class="btn btn-primary mt-2">Agregar</button>
    </form>
</div>

<div class="container">
    <div class="container text-center mt-2">
        <h2>Lista de insumos</h2>
    </div>
    <table class="table table-sm table-bordered border-primary">
                <thead>
                    <tr>
                    <th scope="col">ID Insumo</th>
                    <th scope="col">Nombre Insumo</th>
                    <th scope="col">Tipo de insumo</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each insumos}}
                    <tr>
                    <th scope="row">{{this.id_insumo}}</th>
                    <th scope="row">{{this.nombre_de_insumo}}</th>
                    <td>{{this.tipo_de_insumo}}</td>
                    </tr>
                    {{/each}}
                </tbody>
        </table>
</div>

<div class="container mb-5 text-center mt-2">
    <a class="btn btn-success" href="/admin" role="button">Volver</a>
</div>