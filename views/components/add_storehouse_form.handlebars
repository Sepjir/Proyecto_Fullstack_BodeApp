<div class="container text-center mt-3">
    <h1>Agregar Bodegas</h1>
    <hr class="w-50 container" />
</div>
<div class="container">
    <form action="/add_storehouses" method="post">
    <div class="row">
        <div class="mt-3 col-8">
            <label class="form-label">Nueva bodega:</label>
            <input name="bodega" type="text" class="form-control" required/>
            <button class="btn btn-primary mt-2">Agregar</button>
        </div>
    </div>
    </form>
</div>
<div class="container mt-3">
    <table class="table table-sm table-bordered border-primary">
                <thead>
                    <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre Bodega</th>
                    <th scope="col">Â¿Eliminar?</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each bodegas}}
                    <tr>
                    <th scope="row">{{this.id_bodega}}</th>
                    <td>{{this.nombre_bodega}}</td>
                    <td><a href="/delete_storehouse/{{this.id_bodega}}"><button type="button" class="btn btn-danger">Eliminar</button></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
</div>
