        <div class="col-12">
            <table class="table table-sm table-bordered border-danger">
                <thead>
                    <tr>
                    <th scope="col">Nombre Insumo</th>
                    <th scope="col">Tipo de insumo</th>
                    <th scope="col">N° Bodega</th>
                    <th scope="col">Unidades</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    <th scope="row">BRANULA 16G</th>
                    <td>ENDOVENOSO</td>
                    <td>2</td>
                    <td>0</td>
                    </tr>
                    <tr>
                    <th scope="row">MASCARILLA VENTURI PEDIATRICA</th>
                    <td>QUIRURGICO</td>
                    <td>2</td>
                    <td>0</td>
                    </tr>
                    <tr>
                    <th scope="row">GUANTES ESTÉRILES 8.0</th>
                    <td>EPP</td>
                    <td>3</td>
                    <td>0</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="container text-center">
    <div class="row">
        <div class="col-12">
            <a class="btn btn-primary" href="/semanal" role="button">Informe Semanal</a>
            <a class="btn btn-primary" href="/mensual" role="button">Informe Mensual</a>
        </div>
    </div>
</div>
