<div class="container text-center mt-3">
    <h1>Departamentos</h1>
    <img class="img-fluid" src="public/img/bodeapp.png" alt="BodeApp Logo" width="200" height="200">
    <hr class="w-50 container" />
</div>
<div class="container">
    <form action="/agregar_area" method="post">
    <div class="row">
        <div class="mt-3 col-8">
            <label class="form-label">Nuevo departamento:</label>
            <input name="area" type="text" class="form-control" required/>
        </div>
    </div>
    <button class="btn btn-primary mt-2">Agregar</button>
    </form>
</div>
<div class="container mt-3">
    <table class="table table-sm table-bordered border-primary">
                <thead>
                    <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre departamento</th>
                    <th scope="col">Â¿Eliminar?</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each areas}}
                    <tr>
                    <th scope="row">{{this.id_area}}</th>
                    <td>{{this.nombre_area}}</td>
                    <td><a href="/borrar_area/{{this.id_area}}"><button type="button" class="btn btn-danger">Eliminar</button></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
</div>
<div class="container mb-5 text-center">
    <a href="/admin"><button type="button" class="btn btn-success">Volver</button></a>
</div>